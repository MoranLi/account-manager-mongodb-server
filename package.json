{
  "name": "account-manager-mongodb-server",
  "version": "1.0.0",
  "description": "provide RESTAPI for mongodb",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon index.js",
    "production": "cross-env NODE_ENV=production node index.js",
    "start:debug": "cross-env NODE_ENV=development nodemon --inspect index.js",
    "tdd": "cross-env NODE_ENV=test nodemon --exec nyc --cache --reporter=text-summary --temp-directory=./test/coverage/.nyc_output mocha test/*.js --exit",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --cache --reporter=text-summary --report-dir=./test/coverage --temp-directory=./test/coverage/.nyc_output mocha test/*.js --reporter mochawesome --reporter-options reportDir=./test/test-reports,reportFilename=report --exit",
    "lint": "eslint --cache --ext .js src test --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MoranLi/account-manager-mongodb-server.git"
  },
  "author": "Yukun Li",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MoranLi/account-manager-mongodb-server/issues"
  },
  "homepage": "https://github.com/MoranLi/account-manager-mongodb-server#readme",
  "dependencies": {
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validation": "^1.0.3",
    "express-winston": "^4.0.2",
    "helmet": "^3.21.2",
    "http-status": "^1.4.2",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.4.1",
    "mongoose": "^5.8.4",
    "morgan": "^1.9.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^7.0.0",
    "mochawesome": "^4.1.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "sinon": "^8.0.2",
    "supertest": "^4.0.2"
  }
}
